<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actege"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_back"
    tools:context=".MainActivity">
    <!--
    android:paddingTop="@dimen/activity_vertical_margin"-->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/topbarbr"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:textAlignment="center"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:gravity="center"
            android:text="EARTH"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/ocean_light"
            android:textSize="26sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/chat_from_bg_normal"
        android:onClick="onClickRight"
        android:padding="25dp"
        android:text="下午开会是......"
        android:textSize="27sp"
        android:layout_below="@+id/btn_right"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imgV_engage"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:scaleType="fitCenter"
        android:src="@drawable/main_deg" />

    <Button
        android:id="@+id/button"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_below="@+id/imgV_engage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/ic_lauch_bg"
        android:elevation="11dp"
        android:onClick="Touchbtn"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!--TextView
        android:id="@+id/textView2"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/outgoing"
        android:gravity="top|left"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="转发给...."
        android:textSize="24sp"
        android:layout_below="@+id/imgV_engage"
        android:layout_centerHorizontal="true" /-->

    <Button
        android:id="@+id/btn_left"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_details_gohome"
        android:backgroundTint="#e0e0e0"
        android:onClick="onBack"
        android:layout_marginLeft="10sp"
        android:text=""
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/iconttmenu"
        android:backgroundTint="#e0e0e0"
        android:text="  "
        android:onClick="onClickRight"
        android:textSize="30sp" />

</RelativeLayout>
